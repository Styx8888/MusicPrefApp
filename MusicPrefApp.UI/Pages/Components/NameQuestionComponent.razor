@using MusicPrefApp.Application.Questions
@using MusicPrefApp.UI.State

<MudTextField T="string" Label="@Question.Description" TextChanged="ChangeName"/>
@*<ValidationMessage For="@(() => AppState.AnswersModel.Username)" />*@

@code {
    [Inject] public AppState AppState { get; set; }

    public NameQuestion Question { get; set; }

    protected override void OnInitialized()
    {
        Question = new NameQuestion();
    }

    private void ChangeName(string name)
    {
        if (!string.IsNullOrEmpty(name))
        {
            AppState.SetName(name);
        }
    }
}